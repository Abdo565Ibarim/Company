@model IEnumerable<Depratment>

@{
    ViewData["Title"] = "Index";
}

<h1>All Departmert </h1>

<br />
<br />

<a asp-action="Create" asp-controller="Department" class="btn btn-primary">Create Department</a> 
<br />
<br />


@if(Model.Count() > 0) {

    <table class="table">
        <thead>
            <tr>
                <th scope="col">Code</th>
                <th scope="col">Name</th>
                <th scope="col">Date Of Creation</th>
                <th scope="col">Details</th>
                <th scope="col">Update</th>
                <th scope="col">Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td>@item.Code</td>
                    <td>@item.Name</td>
                    <td>@item.CreateAt</td>
                    <td>
                        <a asp-action="Datails" class="btn btn-warning">Datails</a>
                    </td>
                    <td>
                        <a asp-action="Edit" class="btn btn-success">Update</a>
                    </td>
                    <td>
                        <a asp-action="Delele" class="btn btn-danger">Delele</a>
                    </td>

                </tr>


            }
        </tbody>
    </table>

}else{

    <div class="mt-4 alert alert-info">
        <h4>
            There are on Departmet : (
        </h4>
    </div>
}


